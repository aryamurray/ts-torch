{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["*.ts"],
  "references": [
    { "path": "../packages/@ts-torch/core" },
    { "path": "../packages/@ts-torch/datasets" },
    { "path": "../packages/@ts-torch/nn" },
    { "path": "../packages/@ts-torch/optim" }
  ]
}
