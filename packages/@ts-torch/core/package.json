{
  "name": "@ts-torch/core",
  "version": "0.1.0",
  "description": "Core tensor operations & FFI bindings for ts-torch",
  "files": [
    "dist"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./src/index.ts"
    },
    "./ffi": {
      "bun": "./src/ffi/index.ts",
      "types": "./dist/ffi/index.d.ts",
      "import": "./dist/ffi/index.js",
      "default": "./src/ffi/index.ts"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aryamurray/ts-torch.git",
    "directory": "packages/@ts-torch/core"
  },
  "bugs": {
    "url": "https://github.com/aryamurray/ts-torch/issues"
  },
  "homepage": "https://github.com/aryamurray/ts-torch#readme",
  "scripts": {
    "build": "vite build",
    "build:native": "bun run scripts/build-native.ts",
    "build:native:cuda": "bun run ../../../scripts/build-native-cuda.ts",
    "dev": "tsc --watch",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@ts-torch-platform/loader": "workspace:*",
    "koffi": "^2.9.0"
  },
  "devDependencies": {
    "typescript": "5.9.2",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18"
  }
}
