{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build:native": {
      "cache": false,
      "inputs": ["native/src/**", "native/include/**", "native/CMakeLists.txt"],
      "outputs": ["native/build/**"],
      "env": ["LIBTORCH", "LIBTORCH_PATH"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "@ts-torch/core#build": {
      "dependsOn": ["build:native", "^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "examples#build": {
      "cache": false,
      "outputs": [],
      "dependsOn": []
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "src/**/*.ts", "**/*.test.ts", "__tests__/**/*.ts", "vitest.config.ts"],
      "outputs": ["coverage/**"],
      "env": ["TS_TORCH_LIB"],
      "cache": true
    },
    "test:unit": {
      "dependsOn": [],
      "inputs": ["$TURBO_DEFAULT$", "src/**/*.ts", "**/*.unit.test.ts"],
      "cache": true
    },
    "test:integration": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "src/**/*.ts", "**/*.integration.test.ts"],
      "env": ["TS_TORCH_LIB"],
      "cache": false
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "cache": false
    }
  }
}
