{
  "name": "ts-tools",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/@ts-torch/*",
    "packages/@ts-torch-platform/*",
    "packages/shared-test-utils",
    "examples"
  ],
  "scripts": {
    "setup": "bun run scripts/setup-libtorch.ts",
    "build": "turbo run build",
    "build:native": "turbo run build:native",
    "dev": "turbo run dev",
    "lint": "oxlint --fix",
    "lint:check": "oxlint",
    "format": "oxfmt --write .",
    "format:check": "oxfmt --check .",
    "check-types": "turbo run check-types",
    "check": "bun run lint:check && bun run format:check && bun run check-types",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --testNamePattern=unit",
    "test:integration": "vitest run --testNamePattern=integration"
  },
  "devDependencies": {
    "@types/node": "^25.0.5",
    "@vitest/coverage-v8": "^4.0.16",
    "oxfmt": "^0.23.0",
    "oxlint": "^1.38.0",
    "turbo": "^2.7.3",
    "typescript": "5.9.2",
    "vite": "^6.0.0",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.5"
}
