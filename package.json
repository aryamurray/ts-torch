{
  "name": "ts-tools",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/@ts-torch/*",
    "packages/@ts-torch-platform/*",
    "packages/@ts-torch-cuda/*",
    "packages/shared-test-utils",
    "examples",
    "benchmark"
  ],
  "scripts": {
    "setup": "bun run scripts/setup-libtorch.ts",
    "setup:cuda": "bun run scripts/setup-libtorch-cuda.ts",
    "build": "turbo run build",
    "build:native": "turbo run build:native",
    "build:native:cuda": "turbo run build:native:cuda",
    "dev": "turbo run dev",
    "lint": "oxlint --fix",
    "lint:check": "oxlint",
    "format": "oxfmt --write .",
    "format:check": "oxfmt --check .",
    "check-types": "turbo run check-types",
    "check": "bun run lint:check && bun run format:check && bun run check-types",
    "test": "turbo run test",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "turbo run test:coverage",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "bench": "bun run benchmark/index.ts",
    "bench:core": "bun run benchmark/index.ts --category core",
    "bench:nn": "bun run benchmark/index.ts --category nn",
    "bench:optim": "bun run benchmark/index.ts --category optim",
    "bench:ffi": "bun run benchmark/index.ts --filter ffi",
    "bench:json": "bun run benchmark/index.ts --json"
  },
  "dependencies": {
    "@ts-torch-cuda/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/node": "^25.0.5",
    "@vitest/coverage-v8": "^4.0.16",
    "adm-zip": "^0.5.16",
    "oxfmt": "^0.23.0",
    "oxlint": "^1.38.0",
    "turbo": "^2.7.3",
    "typescript": "5.9.2",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.5"
}
