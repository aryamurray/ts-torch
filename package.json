{
  "name": "ts-tools",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "oxlint --fix",
    "lint:check": "oxlint",
    "format": "oxfmt --write .",
    "format:check": "oxfmt --check .",
    "check-types": "turbo run check-types",
    "check": "bun run lint:check && bun run format:check && bun run check-types"
  },
  "devDependencies": {
    "oxfmt": "^0.23.0",
    "oxlint": "^1.38.0",
    "turbo": "^2.7.3",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/@ts-torch/*",
    "packages/@ts-torch-platform/*"
  ]
}
