{
  "name": "ts-tools",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/@ts-torch/*",
    "packages/@ts-torch-platform/*",
    "examples"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "oxlint --fix",
    "lint:check": "oxlint",
    "format": "oxfmt --write .",
    "format:check": "oxfmt --check .",
    "check-types": "turbo run check-types",
    "check": "bun run lint:check && bun run format:check && bun run check-types"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.16",
    "oxfmt": "^0.23.0",
    "oxlint": "^1.38.0",
    "turbo": "^2.7.3",
    "typescript": "5.9.2",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.5"
}
